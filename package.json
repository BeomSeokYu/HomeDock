{
  "name": "homedock",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @homedock/web dev",
    "dev:api": "pnpm --filter @homedock/api dev",
    "build": "pnpm --filter @homedock/web build && pnpm --filter @homedock/api build",
    "lint": "pnpm --filter @homedock/web lint && pnpm --filter @homedock/api lint",
    "test": "pnpm --filter @homedock/api test",
    "assets:generate": "node scripts/generate-assets.mjs",
    "db:migrate": "pnpm --filter @homedock/api db:migrate",
    "db:generate": "pnpm --filter @homedock/api db:generate"
  }
}
